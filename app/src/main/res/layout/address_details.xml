<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_12sdp"
    android:paddingVertical="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:id="@+id/bottom_sheet"
    style="@style/Background"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add details"
            android:textSize="@dimen/_13ssp"
            android:fontFamily="@font/helvetica"
            style="@style/WordColor" />
        <ImageButton
            android:layout_width="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/_3sdp"
            android:id="@+id/close_bottom_Sheet"
            android:src="@drawable/baseline_close_24"
            style="@style/Icontint"
            android:layout_gravity="end"
            android:layout_height="wrap_content"/>
    </LinearLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/titlec"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_52sdp"
        app:boxStrokeColor="@color/btnColor"
        app:hintTextColor="@color/btnColor"
        app:cursorColor="@color/btnColor"
        android:layout_marginTop="@dimen/_7sdp"
        android:paddingHorizontal="@dimen/_18sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/titlestreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:fontFamily="@font/helvetica"
            android:hint="Street"
            android:importantForAutofill="no"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titlecity"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="@dimen/_52sdp"
            app:boxStrokeColor="@color/btnColor"
            app:hintTextColor="@color/btnColor"
            app:cursorColor="@color/btnColor"
            android:layout_marginTop="@dimen/_7sdp"
            android:paddingEnd="@dimen/_4sdp"
            android:paddingStart="@dimen/_18sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/titleCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/helvetica"
                android:hint="City"
                android:importantForAutofill="no"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titlepos"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_52sdp"
            app:boxStrokeColor="@color/btnColor"
            app:hintTextColor="@color/btnColor"
            app:cursorColor="@color/btnColor"
            android:paddingStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:paddingEnd="@dimen/_18sdp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/titlepostal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:fontFamily="@font/helvetica"
                android:hint="Postal Code"
                android:importantForAutofill="no"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/titlehouse"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_52sdp"
        app:boxStrokeColor="@color/btnColor"
        app:hintTextColor="@color/btnColor"
        app:cursorColor="@color/btnColor"
        android:layout_marginTop="@dimen/_7sdp"
        android:paddingHorizontal="@dimen/_18sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/titleHouseno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:fontFamily="@font/helvetica"
            android:hint="House number"
            android:importantForAutofill="no"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/titlecot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_52sdp"
        app:boxStrokeColor="@color/btnColor"
        app:hintTextColor="@color/btnColor"
        app:cursorColor="@color/btnColor"
        android:layout_marginTop="@dimen/_7sdp"
        android:paddingHorizontal="@dimen/_18sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/titlecontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:fontFamily="@font/helvetica"
            android:hint="Phone no"
            android:importantForAutofill="no"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/savecatbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_18sdp"
            android:background="@drawable/backicon"
            android:fontFamily="@font/helveticabold"
            android:text="Submit details"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/pg"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="invisible"
            android:indeterminateTint="@color/btnColor"
            android:layout_marginTop="@dimen/_10sdp" />
    </RelativeLayout>

</LinearLayout>