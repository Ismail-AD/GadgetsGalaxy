<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item_data"
            type="com.appdev.gadgetsgalaxy.data.Product_info" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/completeCard"
        style="@style/admin_card_back"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_250sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/catImage"
                    imageFromUrl="@{category_data.imageUrl}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/iphonr" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/item_name"
                style="@style/WordColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/helvetica"
                android:text="@{item_data.item_name}"
                android:textSize="@dimen/_14ssp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_count"
                    style="@style/WordColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/helvetica"
                    android:text="@{item_data.quantity_available}"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/item_price_discounted"
                    style="@style/WordColor"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticaneuemedium"
                    android:visibility="gone"
                    android:text="@{item_data.item_discounted_price}"
                    android:textSize="@dimen/_15ssp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/star"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/rating" />
                <TextView
                    android:id="@+id/rating"
                    style="@style/WordColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helvetica"
                    android:text="@{item_data.item_rating}"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:textSize="@dimen/_14ssp" />
                <TextView
                    android:id="@+id/item_price"
                    style="@style/WordColor"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/helveticaneuemedium"
                    android:text="@{item_data.item_price}"
                    android:textSize="@dimen/_15ssp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>