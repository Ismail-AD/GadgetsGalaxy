<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/_15sdp"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/_50sdp"
    style="@style/Background"
    tools:context=".account_settings">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        app:cardCornerRadius="100dp"
        app:strokeWidth="2dp">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/paymentlogo"
            android:scaleType="fitCenter"
            android:src="@drawable/projectlogo"/>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi,"
            android:textColor="@color/Orange"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/helveticabold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ali"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/helveticabold"
            style="@style/WordColor" />
    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        app:dividerColor="#2F1E484C"
        android:id="@+id/slash"
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_height="1.5dp" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            style="@style/theme_cart_image" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Orders"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/helvetica"
            style="@style/WordColor" />

        <ImageButton
            android:layout_width="wrap_content"
            android:clickable="true"
            style="@style/Icontint"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/move_forward_orders"
            android:src="@drawable/right_to"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            style="@style/theme_change_image" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/helvetica"
            style="@style/WordColor" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/modeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/switchTheme"
            android:layout_gravity="end" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            style="@style/theme_user_image" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="User details"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/helvetica"
            style="@style/WordColor" />

        <ImageButton
            android:layout_width="wrap_content"
            android:clickable="true"
            style="@style/Icontint"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/move_forward_userDetails"
            android:src="@drawable/right_to"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        app:dividerColor="#2F1E484C"
        android:id="@+id/slash_2"
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_height="1.5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_27sdp"
            android:layout_height="@dimen/_27sdp"
            style="@style/theme_logout_image"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_6sdp"
            android:textSize="@dimen/_16ssp"
            android:fontFamily="@font/helvetica"
            style="@style/WordColor" />

        <ImageButton
            android:layout_width="wrap_content"
            android:clickable="true"
            style="@style/Icontint"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:id="@+id/move_forward_logout"
            android:src="@drawable/right_to"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>