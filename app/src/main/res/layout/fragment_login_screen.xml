<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/Background"
    tools:context=".login_screen">
    <TextView
        android:id="@+id/s1"
        style="@style/WordColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:fontFamily="@font/helveticabold"
        android:lineHeight="36dp"
        android:text="Login"
        android:textSize="@dimen/_22ssp"
        tools:targetApi="p" />

    <TextView
        android:id="@+id/s2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:lineHeight="22dp"
        android:fontFamily="@font/helvetica"
        android:textColor="@color/textsmall"
        android:text="Welcome to tech store"
        android:textSize="@dimen/_14ssp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/l_mail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_52sdp"
        app:boxStrokeColor="@color/btnColor"
        app:hintTextColor="@color/btnColor"
        app:cursorColor="@color/btnColor"
        android:layout_marginTop="@dimen/_6sdp"
        android:paddingHorizontal="@dimen/_18sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/su_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:fontFamily="@font/helvetica"
            android:hint="Email"
            android:importantForAutofill="no"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/l_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_52sdp"
        app:boxStrokeColor="@color/btnColor"
        app:hintTextColor="@color/btnColor"
        app:cursorColor="@color/btnColor"
        android:paddingHorizontal="@dimen/_18sdp"
        android:layout_marginTop="@dimen/_6sdp"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/su_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/helvetica"
            android:hint="Password"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center"
        android:background="@drawable/backicon"
        android:fontFamily="@font/helveticabold"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold" />


    <ProgressBar
        android:layout_width="wrap_content"
        android:id="@+id/pg"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_10sdp"
        android:progressTint="@color/btnColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal|bottom"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_20sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/helvetica"
            android:text="Don't have an account ?"
            android:textSize="@dimen/_12ssp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/new_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/helvetica"
            android:text=" Sign Up"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>