<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GadgetsGalaxy" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

    </style>

    <!--    PopUpTheme-->
    <style name="PopupTheme" parent="Widget.AppCompat.PopupMenu">
        <item name="android:colorBackground">@color/white</item>
    </style>





    <style name="Theme.GadgetsGalaxy" parent="Base.Theme.GadgetsGalaxy" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/projectlogo</item>
        <item name="postSplashScreenTheme">@style/Theme.GadgetsGalaxy</item>

    </style>

    <style name="CurvedCornersDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/border_curve</item>
    </style>

    <style name="FloatingActionButtonShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomFrameLayout">
        <item name="android:layout_width">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_100sdp</item>
        <item name="android:background">@drawable/dashed_border</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>





    <style name="add_btn">
        <item name="android:src">@drawable/add_btn_day</item>
    </style>

    <style name="checkBoxTint">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/white</item>
    </style>


    <style name="BackgroundTint">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="BackgroundDialog">
        <item name="android:background">@drawable/border_curve</item>
    </style>
    <!--    <style name="elementBackground">-->
    <!--        <item name="android:background">@color/ui_element_bck</item>-->
    <!--    </style>-->
    <style name="admin_card_back">
        <item name="cardBackgroundColor">@color/ui_element_bck</item>
    </style>

    <style name="them_card_back">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="theme_search_view">
        <item name="searchIcon">@drawable/srch_day</item>
        <item name="android:background">@drawable/srchview_back</item>
    </style>

    <style name="theme_notify_image">
        <item name="android:src">@drawable/notify</item>
    </style>


    <style name="bottom_menu">
        <item name="menu">@menu/bottom_menu</item>
    </style>


    <style name="ComponentsColor">
        <item name="android:tint">#000000</item>
    </style>

    <style name="WordColor">
        <item name="android:textColor">#F0000000</item>
    </style>

    <style name="Chip_theme">

        <item name="strokeColor">#F0000000</item>
    </style>

    <style name="hintSpinnerWordColor">
        <item name="android:textColorHint">#F0000000</item>
        <item name="android:background">@drawable/srchview_back</item>
        <item name="android:textColor">#F0000000</item>
        <item name="spinner_arrow_tint">#F0000000</item>
        <item name="spinner_popup_background">@color/white</item>
    </style>

    <style name="DiscountWordColor">
        <item name="android:textColor">#8c8c8c</item>
    </style>

    <style name="Icontint">
        <item name="iconTint">#F0000000</item>
    </style>

    <style name="ButtonBack">
        <item name="android:color">@color/btnColor</item>
    </style>

</resources>